
<h3><%= @item.title %></h3>
<ul>
  <li>Description: <%= @item.description %></li>
  <li>Price: $<%= number_with_precision(@item.price, :precision => 2) %></li>
  <li>Status: <%= @item.status %></li>
</ul>

<% if current_user.role == 'admin' %>
  <%= link_to "Edit Item", edit_admin_item_path(@item) %>
<% end %>