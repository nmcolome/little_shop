<div class="form_container">
  <div class="user_forms">
    <h2>Login</h2>

    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label :username, class: 'label' %>
      <%= f.text_field :username, class: 'text_input' %>

      <%= f.label :password, class: 'label' %>
      <%= f.password_field :password, class: 'text_input' %>

      <%= f.submit "Login", class: 'login-submit' %>

    <% end %>

    <h3>Don't have an account? <%= link_to "Create Account", new_user_path %></h3>
  </div>
</div>