<div class="form_container">
  <div class="user_forms">
    <h2>Create Account</h2>

    <%= form_for(@user) do |f| %>

      <%= f.label :first_name %>
      <%= f.text_field :first_name %><br>

      <%= f.label :last_name %>
      <%= f.text_field :last_name %><br>

      <%= f.label :username %>
      <%= f.text_field :username %><br>

      <%= f.label :password %>
      <%= f.text_field :password %><br>

      <%= f.label :email %>
      <%= f.text_field :email %><br>

      <%= f.label :address %>
      <%= f.text_field :address %><br>

      <%= f.label :state %>
      <%= f.text_field :state %><br>

      <%= f.label :city %>
      <%= f.text_field :city %><br>

      <%= f.label :zipcode %>
      <%= f.text_field :zipcode %><br>

      <%= f.submit "Create Account", class: 'login-submit' %>
    <% end %>
  </div>
</div>