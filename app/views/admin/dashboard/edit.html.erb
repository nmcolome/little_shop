<div class="form_container">
  <div class="user_forms">
    <h2>Edit Your Information</h2>

    <%= form_for [:admin, @user] do |f| %>
      <%= f.label :first_name, class: 'label' %>
      <%= f.text_field :first_name, class: 'text_input' %>

      <%= f.label :last_name, class: 'label' %>
      <%= f.text_field :last_name, class: 'text_input' %><br>

      <%= f.label :email, class: 'label' %>
      <%= f.text_field :email, class: 'text_input' %>

      <%= f.label :username, class: 'label' %>
      <%= f.text_field :username, class: 'text_input' %>

      <%= f.label :password, class: 'label' %>
      <%= f.text_field :password, class: 'text_input' %><br>

      <%= f.label :address, class: 'label' %>
      <%= f.text_field :address, class: 'text_input' %>

      <%= f.label :city, class: 'label' %>
      <%= f.text_field :city, class: 'text_input' %>

      <%= f.label :state, class: 'label' %>
      <%= f.text_field :state, class: 'text_input' %>

      <%= f.label :zipcode, class: 'label' %>
      <%= f.text_field :zipcode, class: 'text_input' %><br>

      <%= f.label :role, class: 'label' %>
      <%= f.text_field :role, class: 'text_input' %>

      <%= f.submit "Update", class: 'login-submit' %>
    <% end %>
  </div>
</div>